<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.Controls.PopupsControl">

    <StackLayout Padding="10">
        <Button x:Name="buttonDisplay" 
                Text="Display Alert"
                Clicked="buttonDisplay_Clicked">
            
        </Button>

        <Button x:Name="buttonResponse"
                Text="Get Response"
                Clicked="buttonResponse_Clicked">
            
        </Button>

        <Button x:Name="getStringButton"
                Text="Get String"
                Clicked="getStringButton_Clicked">

        </Button>

        <Label x:Name="lblResult" HorizontalOptions="Center"/>
    </StackLayout>
    
</ContentPage>