<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.Databases.AppProperties"
             Padding="20">

    <TableView Intent="Form">
        <TableRoot>
            <TableSection>
                <EntryCell x:Name="theme" Label="Theme" Completed="OnChanged"/>
                <SwitchCell x:Name="notifications" Text="Notifications" OnChanged="OnChanged"/>
            </TableSection>
        </TableRoot>
    </TableView>

</ContentPage>